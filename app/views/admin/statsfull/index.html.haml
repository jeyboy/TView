.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.new", :default => "Small statistic")}", admin_statsfull_small_path
      %li.active= link_to "#{t("web-app-theme.list", :default => "Full statistic")}", admin_statsfull_index_path      
  .content
    %h2.title
      = "User Full Statistic"
    .inner
      %table.table
        %tr
          %th="User IP"            
          %th="Browser"
          %th="Referer host"
          %th= "Viewed"
          %th= "Downloaded"
          %th.last
        - @userstats.each do |stat|
          %tr{:class => cycle("odd", "even")}
            %td
              = stat.user_ip
            %td
              = stat.browser
            %td
              = stat.went_from
            %td
              = stat.viewtemplates_count
            %td
              = stat.downloadtemplates_count
            %td.last
              = link_to "Show", admin_statsfull_show_path(stat)
      .actions-bar.wat-cf
        .actions
        = will_paginate @userstats
- content_for :sidebar, render(:partial => 'sidebar', :locals => {:path => admin_statsfull_index_path})
